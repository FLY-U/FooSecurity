<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fsapp.sunsi.foosecurity.product.SellProductActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        //左间距
        <LinearLayout
            android:layout_width="@dimen/all_zero"
            android:layout_height="match_parent"
            android:layout_weight="0.03">
        </LinearLayout>
        <LinearLayout
            android:layout_width="@dimen/all_zero"
            android:layout_height="match_parent"
            android:layout_weight="0.96"
            android:orientation="vertical">
            //类型
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/all_forty"
                android:layout_marginTop="@dimen/all_thirty"
                android:background="@drawable/linerlayout_border_silver">
                <TextView
                    android:id="@+id/pro_cates"
                    android:layout_width="@dimen/all_zero"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7"
                    android:text="右侧选择类型"
                    android:gravity="center_vertical|center_horizontal"
                    android:textSize="@dimen/all_thirteen"
                    android:layout_marginLeft="@dimen/all_five"/>
                <Button
                    android:id="@+id/pro_check_cates"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_corner_green"
                    android:text="类型"
                    android:textColor="@color/white"/>
            </LinearLayout>

            //数量
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/all_forty"
                android:layout_marginTop="@dimen/all_thirty"
                android:background="@drawable/linerlayout_border_silver">
                <EditText
                    android:id="@+id/pro_sale_count"
                    android:layout_width="@dimen/all_zero"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:hint="@string/pro_num"
                    android:background="@null"
                    android:textColor="@color/silver"
                    android:textSize="@dimen/all_thirteen"
                    android:layout_marginLeft="@dimen/all_five"
                    android:inputType="phone|number"
                    android:maxLength="11"
                    android:numeric="integer"/>
                <LinearLayout
                    android:layout_width="@dimen/all_one"
                    android:layout_height="match_parent"
                    android:background="@drawable/linerlayout_border_silver">
                </LinearLayout>
                <Spinner
                    android:id="@+id/pro_sale_mea"
                    android:layout_width="@dimen/all_zero"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:entries="@array/sale_mea"
                    android:gravity="center_horizontal"></Spinner>
            </LinearLayout>
            //单价
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/all_forty"
                android:layout_marginTop="@dimen/all_thirty"
                android:background="@drawable/linerlayout_border_silver">
                <ImageView
                    android:src="@mipmap/user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <LinearLayout
                    android:layout_width="@dimen/all_one"
                    android:layout_height="match_parent"
                    android:background="@drawable/linerlayout_border_silver">
                </LinearLayout>
                <EditText
                    android:id="@+id/pro_price"
                    android:layout_width="@dimen/all_zero"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7"
                    android:hint="@string/pro_price"
                    android:background="@null"
                    android:textColor="@color/silver"
                    android:textSize="@dimen/all_thirteen"
                    android:layout_marginLeft="@dimen/all_five"
                    android:inputType="phone|number"
                    android:maxLength="11"
                    android:numeric="integer"/>
            </LinearLayout>
            //单价
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/all_zero"
                android:layout_weight="0.1"
                android:layout_marginTop="@dimen/all_eleven"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="@dimen/all_zero"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5">
                    <TextView
                        android:src="@mipmap/user"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="佣金($)："
                        />
                    <TextView
                        android:id="@+id/pro_com"
                        android:layout_width="@dimen/all_zero"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:hint="0.0"
                        android:textColor="@color/silver"
                        android:textSize="@dimen/all_thirteen"
                        android:gravity="center_vertical"/>
                </LinearLayout>
                //单卖
                <LinearLayout
                    android:layout_width="@dimen/all_zero"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25">
                    <TextView
                        android:id="@+id/regist_text_province"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="单卖"
                        android:gravity="center_vertical|center_horizontal"
                        android:textSize="@dimen/all_thirteen"
                        android:layout_marginLeft="@dimen/all_five"/>
                    <CheckBox
                        android:id="@+id/pro_sale_single"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:button="@null"
                        android:checked="false"
                        android:textColor="#666666"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/check_pw"
                        android:layout_marginLeft="@dimen/all_five"/>
                </LinearLayout>
                //自取包裹
                <LinearLayout
                    android:layout_width="@dimen/all_zero"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25">
                    <TextView
                        android:id="@+id/regist_text_province"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="自取包裹"
                        android:gravity="center_vertical|center_horizontal"
                        android:textSize="@dimen/all_thirteen"
                        android:layout_marginLeft="@dimen/all_five"/>
                    <CheckBox
                        android:id="@+id/pro_send_ornot"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:button="@null"
                        android:checked="false"
                        android:textColor="#666666"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/check_pw"
                        android:layout_marginLeft="@dimen/all_five"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/all_one"
                android:background="@drawable/linerlayout_border_silver">
            </LinearLayout>

            //是否预售、单卖与自取
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/all_zero"
                android:layout_weight="0.1"
                android:layout_marginTop="@dimen/all_eleven"
                android:orientation="horizontal">
                //预售
                <LinearLayout
                    android:layout_width="@dimen/all_zero"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="@dimen/all_zero"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/regist_text_province"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="预售"
                            android:gravity="center_vertical|center_horizontal"
                            android:textSize="@dimen/all_thirteen"
                            android:layout_marginLeft="@dimen/all_five"/>
                        <CheckBox
                            android:id="@+id/pro_sale_type"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:button="@null"
                            android:checked="true"
                            android:textColor="#666666"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/check_pw"
                            android:layout_marginLeft="@dimen/all_five"/>
                        </LinearLayout>
                    <LinearLayout
                        android:layout_width="@dimen/all_zero"
                        android:layout_height="@dimen/all_forty"
                        android:layout_weight="0.5"
                        android:orientation="horizontal"
                        android:layout_gravity="center_vertical">
                        <TextView
                            android:id="@+id/pro_time_show"
                            android:layout_width="@dimen/all_zero"
                            android:layout_height="match_parent"
                            android:layout_weight="0.4"
                            android:text="右侧选择时间"
                            android:gravity="center_vertical|center_horizontal"
                            android:textSize="@dimen/all_thirteen"/>
                        <Button
                            android:id="@+id/pro_type_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/button_corner_green"
                            android:text="时间"
                            android:textColor="@color/white"/>
                    </LinearLayout>
                    </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/all_zero"
                android:layout_weight="0.2"
                android:gravity="center_vertical">
                <Button
                    android:id="@+id/pro_next"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/all_forty"
                    android:background="@drawable/button_corner_green"
                    android:text="下一步"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>
        //右间距
        <LinearLayout
            android:layout_width="@dimen/all_zero"
            android:layout_height="match_parent"
            android:layout_weight="0.03">
        </LinearLayout>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
