<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fsapp.sunsi.foosecurity.regist.RegistAddressActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        //地址
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/all_zero"
            android:layout_weight="0.5"
            android:orientation="horizontal">
            //左间距
            <LinearLayout
                android:layout_width="@dimen/all_zero"
                android:layout_height="match_parent"
                android:layout_weight="0.03">
            </LinearLayout>
            <LinearLayout
                android:layout_width="@dimen/all_zero"
                android:layout_height="match_parent"
                android:layout_weight="0.96"
                android:orientation="vertical">
                //所在省份
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/all_thirty_five"
                    android:layout_marginTop="@dimen/all_eleven"
                    android:background="@drawable/linerlayout_border_silver">
                    <TextView
                        android:id="@+id/regist_text_province"
                        android:layout_width="@dimen/all_zero"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:text="右侧选择所在省份"
                        android:gravity="center_vertical|center_horizontal"
                        android:textSize="@dimen/all_thirteen"
                        android:layout_marginLeft="@dimen/all_five"/>
                    <Button
                        android:id="@+id/regist_check_province"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_corner_green"
                        android:text="所在省份"
                        android:textColor="@color/white"/>
                </LinearLayout>
                //所在城市
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/all_thirty_five"
                    android:layout_marginTop="@dimen/all_eleven"
                    android:background="@drawable/linerlayout_border_silver">
                    <TextView
                        android:id="@+id/regist_text_city"
                        android:layout_width="@dimen/all_zero"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:text="右侧选择所在城市"
                        android:gravity="center_vertical|center_horizontal"
                        android:textSize="@dimen/all_thirteen"
                        android:layout_marginLeft="@dimen/all_five"/>
                    <Button
                        android:id="@+id/regist_check_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_corner_green"
                        android:text="所在城市"
                        android:textColor="@color/white"/>
                </LinearLayout>
                //所在区县
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/all_thirty_five"
                    android:layout_marginTop="@dimen/all_eleven"
                    android:background="@drawable/linerlayout_border_silver">
                    <TextView
                        android:id="@+id/regist_text_county"
                        android:layout_width="@dimen/all_zero"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:text="右侧选择所在区县"
                        android:gravity="center_vertical|center_horizontal"
                        android:textSize="@dimen/all_thirteen"
                        android:layout_marginLeft="@dimen/all_five"/>
                    <Button
                        android:id="@+id/regist_check_county"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_corner_green"
                        android:text="所在区县"
                        android:textColor="@color/white"/>
                </LinearLayout>
                //所在乡镇
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/all_thirty_five"
                    android:layout_marginTop="@dimen/all_eleven"
                    android:background="@drawable/linerlayout_border_silver">
                    <TextView
                        android:id="@+id/regist_text_town"
                        android:layout_width="@dimen/all_zero"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:text="右侧选择所在乡镇"
                        android:gravity="center_vertical|center_horizontal"
                        android:textSize="@dimen/all_thirteen"
                        android:layout_marginLeft="@dimen/all_five"/>
                    <Button
                        android:id="@+id/regist_check_town"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_corner_green"
                        android:text="所在乡镇"
                        android:textColor="@color/white"/>
                </LinearLayout>
                //所在村街
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/all_thirty_five"
                    android:layout_marginTop="@dimen/all_eleven"
                    android:background="@drawable/linerlayout_border_silver">
                    <TextView
                        android:id="@+id/regist_text_village"
                        android:layout_width="@dimen/all_zero"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:text="右侧选择所在村街"
                        android:gravity="center_vertical|center_horizontal"
                        android:textSize="@dimen/all_thirteen"
                        android:layout_marginLeft="@dimen/all_five"/>
                    <Button
                        android:id="@+id/regist_check_village"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_corner_green"
                        android:text="所在村街"
                        android:textColor="@color/white"/>
                </LinearLayout>
                //详细地址
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/all_thirty_five"
                    android:layout_marginTop="@dimen/all_eleven"
                    android:background="@drawable/linerlayout_border_silver">
                    <EditText
                        android:id="@+id/regist_text_address"
                        android:layout_width="@dimen/all_zero"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:hint="@string/regist_address"
                        android:background="@null"
                        android:gravity="center_vertical|center_horizontal"
                        android:textSize="@dimen/all_thirteen"/>
                </LinearLayout>
            </LinearLayout>

            //右间距
            <LinearLayout
                android:layout_width="@dimen/all_zero"
                android:layout_height="match_parent"
                android:layout_weight="0.03">
            </LinearLayout>

        </LinearLayout>
        //地图
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/all_zero"
            android:layout_weight="0.5">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                //左间距
                <LinearLayout
                    android:layout_width="@dimen/all_zero"
                    android:layout_height="match_parent"
                    android:layout_weight="0.03">
                </LinearLayout>
                <LinearLayout
                    android:layout_width="@dimen/all_zero"
                    android:layout_height="match_parent"
                    android:layout_weight="0.94"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/all_zero"
                        android:layout_weight="0.8"
                        android:background="@drawable/linerlayout_border_green">
                        <com.baidu.mapapi.map.MapView
                            android:id="@+id/regist_mapView"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:clickable="true" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/all_zero"
                        android:layout_weight="0.2"
                        android:gravity="center_vertical">
                        <Button
                            android:id="@+id/regist_address_submit"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/all_forty"
                            android:background="@drawable/button_corner_green"
                            android:text="下一步"
                            android:textColor="@color/white"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </LinearLayout>
                //右间距
                <LinearLayout
                    android:layout_width="@dimen/all_zero"
                    android:layout_height="match_parent"
                    android:layout_weight="0.03">
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
