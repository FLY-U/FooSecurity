<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fsapp.sunsi.foosecurity.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        //title
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/all_zero"
            android:layout_weight="0.1"
            android:orientation="vertical"
            android:background="#00c24e"
            android:gravity="center_horizontal">
            <TextView
                android:layout_width="@dimen/all_hundred"
                android:layout_height="match_parent"
                android:text="登   录"
                android:textSize="@dimen/all_twenty"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:gravity="center_vertical|center_horizontal"/>
        </LinearLayout>
        //用户名密码部分
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/all_zero"
            android:layout_weight="0.4"
            android:orientation="vertical">
            <!-- 手机号、密码 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/all_zero"
                android:layout_weight="0.8"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/all_ten">
                //左间距
                <LinearLayout
                    android:layout_width="@dimen/all_zero"
                    android:layout_height="match_parent"
                    android:layout_weight="0.03">
                </LinearLayout>
                <LinearLayout
                    android:layout_width="@dimen/all_zero"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.94"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/all_forty"
                        android:background="@drawable/linerlayout_border_silver">
                        <ImageView
                            android:src="@mipmap/user"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />
                        <LinearLayout
                            android:layout_width="@dimen/all_one"
                            android:layout_height="match_parent"
                            android:background="@drawable/linerlayout_border_silver">
                        </LinearLayout>
                        <EditText
                            android:id="@+id/phone"
                            android:layout_width="@dimen/all_zero"
                            android:layout_height="match_parent"
                            android:layout_weight="0.7"
                            android:hint="@string/user_name"
                            android:background="@null"
                            android:textColor="@color/silver"
                            android:textSize="@dimen/all_thirteen"
                            android:layout_marginLeft="@dimen/all_five"
                            android:inputType="phone|number"
                            android:maxLength="11"
                            android:numeric="integer"/>
                    </LinearLayout>

                    //密码
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/all_forty"
                        android:layout_marginTop="@dimen/all_twenty"
                        android:background="@drawable/linerlayout_border_silver">
                        <ImageView
                            android:src="@mipmap/pw"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />
                        <LinearLayout
                            android:layout_width="@dimen/all_one"
                            android:layout_height="match_parent"
                            android:background="@drawable/linerlayout_border_silver">
                        </LinearLayout>
                        <EditText
                            android:id="@+id/pwd"
                            android:layout_width="@dimen/all_zero"
                            android:layout_height="match_parent"
                            android:layout_weight="0.7"
                            android:hint="@string/pass_wd"
                            android:textSize="@dimen/all_thirteen"
                            android:inputType="textPassword"
                            android:background="@null"
                            android:layout_marginLeft="@dimen/all_five"/>
                    </LinearLayout>

                    <!--记住密码、忘记密码 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/all_zero"
                        android:layout_weight="0.2"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/all_ten">
                        <LinearLayout
                            android:id="@+id/remember"
                            android:layout_width="@dimen/all_zero"
                            android:layout_height="match_parent"
                            android:layout_weight="1">
                            <CheckBox
                                android:id="@+id/ischeck"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:button="@null"
                                android:checked="true"
                                android:textColor="#666666"
                                android:layout_gravity="center_vertical"
                                android:background="@drawable/check_pw"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/all_thirty"
                                android:text="记住密码"
                                android:gravity="center_vertical"
                                android:layout_marginLeft="@dimen/all_five"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/forget"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/all_thirty"
                            android:text="忘记密码？"
                            android:textColor="@color/blue"
                            android:textStyle="bold"
                            android:gravity="center_vertical"/>
                    </LinearLayout>
                </LinearLayout>
                //右间距
                <LinearLayout
                    android:layout_width="@dimen/all_zero"
                    android:layout_height="match_parent"
                    android:layout_weight="0.03">
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        //登录注册按钮
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/all_zero"
            android:layout_weight="0.3"
            android:orientation="horizontal">
            //左间距
            <LinearLayout
                android:layout_width="@dimen/all_zero"
                android:layout_height="match_parent"
                android:layout_weight="0.03">
            </LinearLayout>
            <LinearLayout
                android:layout_width="@dimen/all_zero"
                android:layout_height="match_parent"
                android:layout_weight="0.94"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                <Button
                    android:id="@+id/login"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/all_forty"
                    android:background="@drawable/button_corner_green"
                    android:text="登  录"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>
                <Button
                    android:id="@+id/regist"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/all_forty"
                    android:background="@drawable/button_corner_yellow"
                    android:text="注  册"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/all_ten"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/all_twenty"
                    android:text="客服:010-110120130"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="北京迈思科技服务有限公司"
                    android:layout_marginTop="@dimen/all_three"/>
            </LinearLayout>
            //右间距
            <LinearLayout
                android:layout_width="@dimen/all_zero"
                android:layout_height="match_parent"
                android:layout_weight="0.03">
            </LinearLayout>

        </LinearLayout>

        //公司
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/all_zero"
            android:layout_weight="0.2"
            android:orientation="vertical"
            android:gravity="center_horizontal">
        </LinearLayout>
    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>
